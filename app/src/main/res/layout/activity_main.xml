<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#00000000"
    >

    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleY="-1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word2"
        app:layout_constraintVertical_bias="1.0"
        app:mwhCloseColor="#00BCD4"
        app:mwhIsRunning="true"
        app:mwhProgress="1"
        app:mwhStartColor="@color/purple_200"
        app:mwhVelocity="1"
        app:mwhWaves="MultiWave"/>



    <Button
        android:id="@+id/login"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="#48D837E4"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"

        android:insetBottom="0dp"
        android:text="Login"
        android:textSize="12dp"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word2" />

    <Button
        android:id="@+id/signin"
        android:layout_width="79dp"
        android:layout_height="79dp"

        android:layout_marginTop="308dp"
        android:backgroundTint="#48D837E4"
        android:textSize="12dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Sign \nin"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word2" />
    <TextView
        android:id="@+id/Welcome_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO "
        android:textSize="40dp"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358" />

    <TextView
        android:id="@+id/Welcome_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATT MEET"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word"
        app:layout_constraintVertical_bias="0.058" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="105dp"
        android:layout_height="102dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/Welcome_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_main" />

</androidx.constraintlayout.widget.ConstraintLayout>