<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/Welcome_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO "
        android:textSize="40dp"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/Welcome_word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDU MEET"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/Welcome_word3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="___________________________"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word2"
        app:layout_constraintVertical_bias="0.037" />

    <Button
        android:id="@+id/login"
        android:layout_width="79dp"
        android:layout_height="79dp"


        android:layout_marginTop="28dp"
        android:backgroundTint="#48D837E4"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Login"
        app:cornerRadius="50dp"

        app:layout_constraintEnd_toStartOf="@+id/signin"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word3" />

    <Button
        android:id="@+id/signin"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="96dp"
        android:backgroundTint="#48D837E4"

        android:insetLeft="0dp"
        android:insetTop="0dp"

        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="Sign in"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word3" />

</androidx.constraintlayout.widget.ConstraintLayout>