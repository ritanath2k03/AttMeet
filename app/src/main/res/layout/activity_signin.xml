<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Signin"

    android:background="#00000000"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_word2"
        app:layout_constraintVertical_bias="1.0"
        app:mwhCloseColor="#6300D4"
        app:mwhIsRunning="true"
        app:mwhProgress="1"
        app:mwhStartColor="@color/purple_200"
        app:mwhVelocity="1"
        app:mwhWaves="MultiWave"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_gravity="center"
        android:layout_marginBottom="25dp"

        android:gravity="center"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"
android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Sign up    "
            android:gravity="right"
            android:textColor="#BC5656"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/Menuoption_textViewbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administration"

            android:clickable="true"
            android:textSize="20dp"

            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/white"
    app:boxBackgroundColor="@color/purple_200"
app:boxStrokeColor="@color/teal_200"

    app:hintTextColor="@color/white"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText

        android:textSize="15dp"

        android:id="@+id/College_signin"
        android:inputType="text"
        android:hint="Enter College Name"

        android:textColor="#050505"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"

        />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"

            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Id_signin"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:textColorHint="#9E9393"
                android:hint="Enter College Id"
                android:textColor="#050505"

                android:layout_marginTop="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColorHint="@color/white"
      app:boxBackgroundColor="@color/purple_200"
      app:boxStrokeColor="@color/teal_200"

      app:hintTextColor="@color/white"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
      <com.google.android.material.textfield.TextInputEditText

          android:id="@+id/University_signin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15dp"
          android:inputType="text"
          android:textColorHint="#9E9393"
          android:hint="Enter University"
          android:textColor="#050505"

          android:layout_marginTop="20dp"
          />
  </com.google.android.material.textfield.TextInputLayout>


  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColorHint="@color/white"
      app:boxBackgroundColor="@color/purple_200"
      app:boxStrokeColor="@color/teal_200"

      app:hintTextColor="@color/white"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/Email_signin"

          android:inputType="textEmailAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15dp"
          android:hint="Enter Email"
          android:textColorHint="#9E9393"
          android:textColor="#050505"

          android:layout_marginTop="20dp"

          />
  </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/white"
    app:boxBackgroundColor="@color/purple_200"
    app:boxStrokeColor="@color/teal_200"

    app:hintTextColor="@color/white"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/Password_signin"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Enter New Password"
        android:paddingStart="20dp"
        android:textColorHint="#9E9393"
        android:textColor="#050505"
        android:inputType="textPassword"


        android:layout_marginTop="20dp"
        />
</com.google.android.material.textfield.TextInputLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/Profile_pic"
           android:layout_width="90dp"
           android:layout_height="90dp"
         android:layout_marginLeft="50dp"
           tools:srcCompat="@tools:sample/avatars" />

       <Button
           android:id="@+id/Choose_profile_pic"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Choose A Pic"
           android:gravity="center"
           android:layout_marginLeft="40dp"
           android:onClick="ChooseProfilePic"
           android:textColor="@color/black"
           android:backgroundTint="#48D837E4"
           android:layout_gravity="center"/>


   </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel "
                android:layout_marginStart="40dp"
                android:background="#FF9090"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/Submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT "
                android:padding="5dp"
                android:layout_marginStart="170dp"
                android:background="#007B7B"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clicktologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to Login"
                android:textColor="#03A9F4"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>