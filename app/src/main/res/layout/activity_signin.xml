<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Signin"
    style="@style/Theme.AttMeetnoactiondaynight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="25dp"

        android:gravity="center"
        >

        <TextView
            android:id="@+id/Menuoption_textViewbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press to Select"
            android:layout_marginTop="15dp"
            android:clickable="true"

            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            />

<EditText
    android:id="@+id/Name_signin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:textColorHint="#9E9393"
    android:hint="Enter Name"
    android:layout_marginTop="15dp"
    android:textColor="#7E6767"
    />
        <EditText
            android:id="@+id/Dob_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColorHint="#9E9393"
            android:hint="Enter DOB"
            android:textColor="#7E6767"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/College_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColorHint="#9E9393"
            android:hint="Enter College Name"
            android:textColor="#7E6767"
            android:layout_marginTop="15dp"
            />
        <EditText
            android:id="@+id/Id_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#9E9393"
            android:hint="Enter Id No."
            android:textColor="#7E6767"
            />


        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/Stream_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColorHint="#9E9393"
            android:hint="Enter Stream(CSE)"
            android:textColor="#7E6767"
            />
        <EditText
            android:id="@+id/Email_signin"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Enter Email"
            android:textColorHint="#9E9393"
            android:textColor="#7E6767"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel "
                android:layout_marginStart="40dp"
                android:background="#F30000"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/Submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT "
                android:padding="5dp"
                android:layout_marginStart="170dp"
                android:background="#00FF49"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>