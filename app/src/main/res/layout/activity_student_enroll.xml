<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StudentEnroll"
    style="@style/Theme.AttMeetnoactiondaynight"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"

        android:gravity="center"
        android:layout_marginStart="20dp"

        android:layout_marginEnd="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Enrollment    "
            android:gravity="right"
            android:textColor="#BC5656"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/Menuoption_textViewbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"

            android:clickable="true"
            android:textSize="20dp"

            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText

                android:textSize="15dp"

                android:id="@+id/Teacher_Name_signup"
                android:inputType="text"
                android:hint="Enter Student Name"

                android:textColor="#050505"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"

            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Teacher_Id_signup"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                android:textColorHint="#9E9393"
                android:hint="Enter Student Id"
                android:textColor="#050505"

                android:layout_marginTop="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/Teacher_Stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:inputType="text"
                android:textColorHint="#9E9393"
                android:hint="Stream"
                android:textColor="#050505"

                android:layout_marginTop="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/Teacher_Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:inputType="text"
                android:textColorHint="#9E9393"
                android:hint="Year"
                android:textColor="#050505"

                android:layout_marginTop="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Email_Teacher_signin"

                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:hint="Enter Email"
                android:textColorHint="#9E9393"
                android:textColor="#050505"

                android:layout_marginTop="20dp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/purple_200"
            app:boxStrokeColor="@color/teal_200"

            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Password_Teacher_signin"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:hint="Enter New Password"
                android:paddingStart="20dp"
                android:textColorHint="#9E9393"
                android:textColor="#050505"
                android:inputType="textPassword"


                android:layout_marginTop="20dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Profile_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/Choose_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose A Pic"
                android:gravity="center"
                android:layout_marginLeft="40dp"

                android:textColor="@color/black"
                android:backgroundTint="#48D837E4"
                android:layout_gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel "
                android:layout_marginStart="40dp"
                android:background="#FF9090"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/SubmitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="20dp"
                android:background="#007B7B"
                android:padding="5dp"
                android:text="SUBMIT "
                android:textColor="@color/black"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clicktologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click to Login"
                android:textColor="#03A9F4"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>